{% extends 'base.html.twig' %}

{% block body %}
	<br>
	<div class="container">
		{# <div class="d-grid gap-2 col-2 mx-auto">
			<h2> {{ properties.title }} </h2>
		</div> #}
		<div class="row">
		<div class="col">
			<img src="{{ asset('img/photo/' ~ properties.photo) }}" class="card-img-top" style="width: 550px;" alt="{{ properties.title }}">
		</div>
		<div class="col">
			<h2> {{ properties.title }}</h2>
			{% if properties.status %}
				<p class="text-success"><strong>On sale</strong></p>
			{% else %}
				<p class="text-danger"><strong>Sold</strong></p>
			{% endif %}
			<p><strong>Type:</strong> {{properties.type}}</p>
			<p><strong>Surface:</strong> {{properties.surface}} mÂ²</p>
			<p><strong>Number of rooms:</strong> {{properties.rooms}}</p>
			<p><strong>Number of floors:</strong> {{properties.floors}}</p>
			<p><strong>Location:</strong> {{properties.city}}</p>
			<p><strong>Price:</strong> ${{properties.price}}</p>
			<p><strong>Options:</strong> 
			{% for option in properties.option %}
				<p>{{ option.name }}</p>
			{% else %}
				<p class="alert alert-danger">This property has no options.</p>
			{% endfor %}
			</p>
		</div>
	</div>
	<br><hr>

	<div id="contact">
		<h4>Make an appointment to visit this property</h4>
		{{ form_start(form) }}
			<div class="row">
				<div class="col col-sm-3">{{ form_row(form.firstname) }}</div>
				<div class="col col-sm-3">{{ form_row(form.lastname) }}</div>
			</div>
			<div class="row">
				<div class="col col-sm-3">{{ form_row(form.email) }}</div>
				<div class="col col-sm-3">{{ form_row(form.phone) }}</div>
			</div>
			<div class="row">
				<div class="col col-sm-3">{{ form_row(form.date) }}</div>
				<div class="col col-sm-3">{{ form_row(form.time) }}</div>
			</div>
			<div class="row">
				<div class="col-sm-7 mx-auto">{{ form_row(form.submit) }}</div>
			</div>
		{{ form_end(form) }}
	</div>

{% endblock %}
